-- ============================================================================
-- NATIVE SERVER BROWSER (Integrated using Library.lua components)
-- ============================================================================
local ServerGroup = Tabs.Servers:AddLeftGroupbox('Server Browser')
ServerGroup:AddLabel('Game ID: 10266164381')

local function joinServer(id)
    local events = ReplicatedStorage:FindFirstChild("Events")
    local dataEvent = events and events:FindFirstChild("DataEvent")
    if dataEvent then
        dataEvent:FireServer("ServerTeleport", id, 14)
    end
end

local function refreshServers()
    -- Note: Library doesn't have a "Clear" function for groupboxes easily accessible.
    -- We will rebuild the list by finding and destroying buttons manually.
    -- NOTE: This assumes the buttons are children of the Scrollbox created by AddLeftGroupbox.
    -- LinoriaLib structure: Groupbox -> Container (Frame).
    
    local container = ServerGroup.Container
    for _, child in pairs(container:GetChildren()) do
        if child:IsA("Frame") and child:FindFirstChild("TextLabel") and child.Name == "ServerButton" then
            child:Destroy()
        end
    end
    
    local serversFolder = ReplicatedStorage:FindFirstChild("Servers")
    if not serversFolder then return end
    
    local sortedServers = {}
    for _, val in ipairs(serversFolder:GetChildren()) do
        if val:IsA("StringValue") then
            table.insert(sortedServers, val)
        end
    end
    
    -- Sort by player count desc
    table.sort(sortedServers, function(a, b)
        local splitA = string.split(a.Value, ' ')
        local splitB = string.split(b.Value, ' ')
        local countA = tonumber(splitA[2]) or 0
        local countB = tonumber(splitB[2]) or 0
        return countA > countB
    end)
    
    for _, serverVal in ipairs(sortedServers) do
        local raw = serverVal.Value
        local split = string.split(raw, ' ')
        local sId = split[1]
        local count = split[2] or "?"
        local sName = serverVal.Name
        local region = serverVal:FindFirstChild("Region") and serverVal.Region.Value or "Unknown"
        local isCurrent = serverVal:FindFirstChild("Current") ~= nil
        
        local text = string.format(" %s | %s | %s/20", sName, region, count)
        if isCurrent then text = " [Current] " .. text end
        
        -- Use Library:AddButton logic but manually to ensure it's added to the scrollable area
        local btn = ServerGroup:AddButton(text, function()
            if not isCurrent then joinServer(sId) end
        end)
        
        -- Mark for deletion on refresh
        btn.Outer.Name = "ServerButton" 
        
        if isCurrent then
            -- Visual indicator for current server
            btn.Outer.BackgroundColor3 = Color3.fromRGB(60, 80, 60)
        end
    end
end

ServerGroup:AddButton('Refresh Servers', refreshServers)

-- Initial Refresh
task.delay(1, refreshServers)


