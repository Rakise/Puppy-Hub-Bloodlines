    -- Movement
    WalkSpeed = 16,
    WalkSpeedEnabled = false,
    JumpPower = 50,
    JumpPowerEnabled = false,
    
    -- Fly
    Fly = false,
    FlySpeed = 50,
    FallSpeed = 25,
    
    -- Noclip
    Noclip = false,
    NoclipSpeed = 150,
    NoclipTween = 1,
    
    -- CFrame Speed
    CFrameSpeed = false,
    CFrameSpeedValue = 1,
    
    -- Internal
    IsPanicMode = false -- True if Chakra Sense is active
}

